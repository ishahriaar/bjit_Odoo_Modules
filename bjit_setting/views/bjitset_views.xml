        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">



            <xpath expr="//notebook/page[@name='settings']/group[1]" position="inside">

                <group>

                </group>

                <group>

                    <field name="project_id"/>
                    <field name="pro_status"/>
                    <field name="dept"/>
                    <field name="pro_manager"/>
                    <field name="sqa_manager"/>
                    <field name="customer"/>
                    <field name="pro_owner"/>
                    <field name="link"/>
                    <field name="gerrit_link"/>

                </group>

                <group>

                    <field name="des"/>
                    <field name="pro_type"/>
                    <field name="eas_effort"/>
                    <field name="actual_effort"/>
